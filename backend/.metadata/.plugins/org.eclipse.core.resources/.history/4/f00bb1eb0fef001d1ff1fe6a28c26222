package com.cg.authservice.service;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;

import com.cg.authservice.dto.ResponseObject;
import com.cg.authservice.dto.UserDto;

@FeignClient(name="user-service",url="http://localhost:8000/user")
public interface RemoteUserService {
	@GetMapping
	ResponseObject get();
	
	@GetMapping("/id/{userId}")
	ResponseObject get(@PathVariable Long userId);

	@GetMapping("/email/{emailId}")
	ResponseObject get(@PathVariable String emailId);
	
	@PostMapping
	ResponseObject add(UserDto userDto);

//	ResponseObject get();
//	
//
//	ResponseObject update(UserDto userDto);
//
//	ResponseObject delete(Long id);
//
//	ResponseObject changePassword(UserDto userDto);
}
