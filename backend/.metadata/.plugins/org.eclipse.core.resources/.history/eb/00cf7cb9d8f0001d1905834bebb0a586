package com.cg.ps.repository;

import java.util.List;

import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.cg.ps.entity.Product;

@Repository
public interface ProductRepo extends JpaRepository<Product, Long> {
	@Query("SELECT product from Product prduct WHERE product.title LIKE :query")
	List<Product> findBySearchQuery(@Param("query") String query, Pageable pageable);

	@Query("SELECT product from Product product ORDER BY product.title ASC")
	List<Product> sortByTitleASC(Pageable pageable);

	@Query("SELECT product from Product product ORDER BY product.updatedAt ASC")
	List<Product> sortByDateASC(Pageable pageable);

	@Query("SELECT product from Product product ORDER BY product.price ASC")
	List<Product> sortByPriceASC(Pageable pageable);
	
	@Query("SELECT product from Product product ORDER BY product.title DESC")
	List<Product> sortByTitleDESC(Pageable pageable);

	@Query("SELECT product from Product product ORDER BY product.updatedAt DESC")
	List<Product> sortByDateDESC(Pageable pageable);

	@Query("SELECT product from Product product ORDER BY product.price DESC")
	List<Product> sortByPriceDESC(Pageable pageable);
}
