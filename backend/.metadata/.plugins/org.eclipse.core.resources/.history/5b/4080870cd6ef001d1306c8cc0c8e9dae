package com.cg.gateway.service;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;

import com.cg.gateway.dto.JwtRequest;
import com.cg.gateway.dto.ResponseObject;
import com.cg.gateway.dto.UserDto;

@FeignClient(name="auth-service",url="http://localhost:8001/api/auth")
public interface RemoteAuthService {
	@PostMapping
	ResponseObject login(JwtRequest request);

	@PostMapping("/register")
	ResponseObject register(UserDto request);

	@GetMapping("/validate/{token}")
	ResponseObject validate(@PathVariable String token);
	
	@DeleteMapping("/{token}")
	ResponseObject signOut(@PathVariable String token);
}
