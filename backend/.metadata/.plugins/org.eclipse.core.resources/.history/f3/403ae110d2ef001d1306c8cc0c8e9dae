package com.cg.gateway.service;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;

import com.cg.gateway.dto.ResponseObject;

@FeignClient(name="user-service",url="http://localhost:8000/api/user")
public interface RemoteAddressService {
	@GetMapping
	ResponseObject get();
	
	@GetMapping("/id/{userId}")
	ResponseObject get(@PathVariable Long userId);

	@GetMapping("/email/{emailId}")
	ResponseObject get(@PathVariable String emailId);
	
//	@PostMapping
//	ResponseObject add(UserDto userDto);

	@PutMapping("/{id}")
	ResponseObject update(@PathVariable Long id,Object request);

	@DeleteMapping("/{id}")
	ResponseObject delete(@PathVariable Long id);

	@PutMapping
	ResponseObject changePassword(Object request);
}
